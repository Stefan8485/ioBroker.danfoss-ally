{
  "type": "panel",
  "i18n": true,
  "items": {
    "_title": {
      "type": "header",
      "text": "Danfoss Ally Cloud"
    },
    "_divider": {
      "type": "divider",
      "style": { "marginTop": 10, "marginBottom": 10 }
    },
    "apiKey": {
      "type": "text",
      "label": "API Key (Client ID)",
      "xs": 12, "sm": 6, "md": 6, "lg": 4, "xl": 4
    },
    "apiSecret": {
      "type": "password",
      "label": "API Secret (Client Secret)",
      "xs": 12, "sm": 6, "md": 6, "lg": 4, "xl": 4
    },
    "tokenUrl": {
      "type": "text",
      "label": "Token URL (OAuth2)",
      "default": "https://api.danfoss.com/oauth2/token",
      "xs": 12, "sm": 6, "md": 6, "lg": 4, "xl": 4
    },
    "apiBaseUrl": {
      "type": "text",
      "label": "API Base URL",
      "default": "https://api.danfoss.com/ally",
      "xs": 12, "sm": 6, "md": 6, "lg": 4, "xl": 4
    },
    "scope": {
      "type": "text",
      "label": "Scope (optional)",
      "xs": 12, "sm": 6, "md": 6, "lg": 4, "xl": 4
    },
    "pollingInterval": {
      "type": "number",
      "label": "Polling Interval (s)",
      "default": 60,
      "min": 15,
      "xs": 12, "sm": 6, "md": 6, "lg": 4, "xl": 4
    }
  }
}
